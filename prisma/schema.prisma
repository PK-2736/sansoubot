generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserMountain {
  id          String   @id @default(uuid())
  name        String
  elevation   Int?
  location    String?
  description String?
  route       String?
  photo_url   String?
  added_by    String?
  approved    Boolean  @default(false)
  created_at  DateTime @default(now())
}

model QuizQuestion {
  id        String   @id @default(uuid())
  question  String
  options   String // JSON文字列として保存（SQLite対応）
  answer    String
  image_url String?
  source    String   @default("mountix") // 'mountix' or 'gemini'
  created_at DateTime @default(now())
}

model QuizScore {
  id        String   @id @default(uuid())
  user_id   String?  @unique
  username  String
  score     Int
  time_ms   Int
  created_at DateTime @default(now())
}

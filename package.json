{
  "name": "mountain-bot",
  "version": "0.1.0",
  "description": "Discord bot for mountain information and quizzes",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop sansoubot",
    "pm2:restart": "pm2 restart sansoubot",
    "pm2:logs": "pm2 logs sansoubot",
    "pm2:delete": "pm2 delete sansoubot"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^4.16.2",
    "@supabase/supabase-js": "^2.0.0",
    "axios": "^1.0.0",
    "discord.js": "^14.0.0",
    "dotenv": "^16.0.0",
    "fast-xml-parser": "^4.5.3",
    "node-cron": "^3.0.0",
    "prisma": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "pm2": "^6.0.14",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
